<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCetSRgmK5mdyDXVJ8jDxWn-zJtP1Ftay4&libraries=places"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/locationpicker.js" asp-append-version="true"></script>

    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
@await RenderSectionAsync("Styles", required: false)

@{
    var message = TempData["AlertMessage"] ?? string.Empty;
}

<body>
    <div class="wrapper">

        <header class="grid">
            <nav class="grid-content">
                <a class="image-link" href="index.html">
                    <img src="~/img/logo.png" alt="logo" class="logo">
                </a>
                <ul>
                    <li> <a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li> <a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li> <a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    <li> <a asp-area="" asp-controller="Home" asp-action="Register">Register</a></li>
                    <li> <a asp-area="" asp-controller="Home" asp-action="Login">Login</a></li>
                </ul>
            </nav>
        </header>
        <div class="grid">
            <div class="grid-content">
                @RenderBody()
            </div>
        </div>
    </div>
    
    @await RenderSectionAsync("Scripts", required: false)
    <script type="text/javascript">
        var message = '@message';
        if(message)
            alert(message);
    </script>
</body>

<footer class="grid">
    <div class="grid-content">
        <div class="footer-text">
            Site Design Copyright HorseMonkey, designed by NotYou Limited
        </div>
    </div>
</footer>
</html>
